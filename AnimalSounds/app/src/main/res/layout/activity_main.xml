<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:text="@string/animal_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            />
    </LinearLayout>
    <GridLayout
        android:id="@+id/animal_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

    <ImageView
        android:id="@+id/animal1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:src="@drawable/bear"
        />
    <ImageView
        android:id="@+id/animal2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:scaleType="fitXY"
        android:src="@drawable/wolf"
        app:layout_constraintLeft_toRightOf="@+id/animal1"
        />
        <ImageView
            android:id="@+id/animal3"
            android:layout_columnWeight="1"
            android:scaleType="fitXY"
            android:src="@drawable/elephant"
            android:layout_rowWeight="1"
            />
        <ImageView
            android:id="@+id/animal4"
            android:src="@drawable/lamb"
            android:layout_columnWeight="1"
            android:scaleType="fitXY"
            android:layout_rowWeight="1"

            />

    </GridLayout>




</android.support.constraint.ConstraintLayout>